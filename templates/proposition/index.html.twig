{% extends 'base.html.twig' %}

{% block title %}Proposition index{% endblock %}

{% block body %}
    <h1>Liste des propositions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Name</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proposition in propositions %}
            <tr>
                <td>{{ proposition.id }}</td>
                <td>{{ proposition.email }}</td>
                <td>{{ proposition.name }}</td>
                <td>{{ proposition.content }}</td>
                <td>
                    <a class="btn btn-secondary btn-sm" href="{{ path('app_proposition_show', {'id': proposition.id}) }}"><i class="fa-solid fa-eye"></i></a>
                    {# <a class="btn btn-warning btn-sm" href="{{ path('app_proposition_edit', {'id': proposition.id}) }}"><i class="fa-solid fa-pen"></i></a> #}
                    {{ include('proposition/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun élément trouvé.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_proposition_new') }}">Create new</a> #}
{% endblock %}
